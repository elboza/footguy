<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <CheckBox
                    android:id="@+id/ckBackground"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="background" />

                <CheckBox
                    android:id="@+id/ckBorder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="border" android:layout_marginLeft="20dp"/>

                <TextView
                    android:id="@+id/footguyFontSizeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="font size" android:layout_marginTop="20dp"/>

                <SeekBar
                    android:id="@+id/seekBar1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:max="19"/>

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="footguy color"
                    android:textAppearance="?android:attr/textAppearanceMedium" android:layout_marginTop="30dp"/>

                <Spinner
                    android:id="@+id/lstColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="40dp"
                    android:entries="@array/myColors" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="=^_^="
                    android:typeface="monospace" android:gravity="bottom" android:layout_marginBottom="5dp"/>
            </LinearLayout>

        </ScrollView>
    </LinearLayout>
