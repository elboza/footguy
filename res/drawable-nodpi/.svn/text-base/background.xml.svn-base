<?xml version="1.0" encoding="utf-8"?>
 <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:id="@+id/bkgBorder"> 
    <shape android:shape="rectangle">
    <solid android:color="#00f0f0f0"/> <!-- #00cc00 -->
    <corners android:radius="7dp" />
    </shape>
  </item>   
    <item android:left="3dp" android:right="3dp" android:top="3dp" android:bottom="3dp" android:id="@+id/bkgBackground"> 
     <shape android:shape="rectangle">
      <padding android:top="3dp" android:bottom="3dp" android:left="3dp" android:right="3dp"/> 
      <solid android:color="#000000" /> <!-- #dd003000 -->
      <corners android:radius="7dp" />
    </shape>
   </item>    
 </layer-list> 